<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minh.wechatonline.LoginAndRegister.SignInActivity">
    <TextView
        android:id="@+id/tvDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/linearDangNhap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvDangNhap"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnDangNhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_button_sign_in"
            android:text="SignIn"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            />


        <TextView
            android:id="@+id/tvDangKy"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up ! If you have not a account ? "
            android:layout_marginTop="50dp"
            android:padding="5dp"

            android:textAlignment="center"
            android:textColor="#0b0ff4"
             />
    </LinearLayout>
</RelativeLayout>
